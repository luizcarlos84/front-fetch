extends ../layout/layout.pug


block content

  //- atributos do container principal
  - var divAtr = ['container', 'my-3', 'py-3', 'col-md-8'];



  
  div.card
    div.card-header(id="headingOne")
      h5.mb-0
        p wallet: #{wallet}
        p hash160: #{hash160}
        p Transações: #{n_tx}
        button(class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne")
          Collapsible Transações

    div(id="collapseOne" class="collapse" aria-labelledby="headingOne")
      .card-body
        each exchange, index in txs
          if(index != 0)
            .dropdown-divider
          p #{index + 1}
          p Timestamp: #{exchange.time}
          each inputs, index in exchange.inputs
            p Inputs: #{inputs.addr} Value: #{inputs.value}
          each out, index in exchange.out
            p Out: #{out.addr} Value: #{out.value}
          
              
            
